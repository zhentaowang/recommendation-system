  <select id="getRestaurantListByCode"  parameterType="map"  resultMap="BaseResultMap">
    select i.*, r.fd_cls from itd_restaurant as i left join restaurant_class as r on i.fd_class = r.fd_class
    where i.fd_code in (${code}) and i.fd_isflashsale = 1 and i.fd_iscoupon = 1
    and i.fd_settlementdiscount = 1 and i.fd_del = 0 and i.fd_lg = 'zh-cn'
